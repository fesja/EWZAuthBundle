<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="auth.facebook.service.class">EWZ\Bundle\AuthBundle\Service\FacebookService</parameter>

        <parameter key="auth.facebook.class">Facebook</parameter>
        <parameter key="auth.facebook.file">%kernel.root_dir%/../vendor/facebook/src/facebook.php</parameter>
        <parameter key="auth.facebook.app_id">null</parameter>
        <parameter key="auth.facebook.secret">null</parameter>
        <parameter key="auth.facebook.cookie">true</parameter>

        <parameter key="templating.helper.auth.facebook.class">EWZ\Bundle\AuthBundle\Templating\Helper\FacebookHelper</parameter>
    </parameters>

    <services>
        <service id="facebook" class="%auth.facebook.class%">
            <file>%auth.facebook.file%</file>
            <argument type="collection">
                <argument key="appId">%auth.facebook.app_id%</argument>
                <argument key="secret">%auth.facebook.secret%</argument>
                <argument key="cookie">%auth.facebook.cookie%</argument>
            </argument>
        </service>

        <service id="auth.facebook" class="%auth.facebook.service.class%">
            <argument type="service" id="facebook" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="templating.helper.auth.facebook" class="%templating.helper.auth.facebook.class%">
            <tag name="templating.helper" alias="auth.facebook" />
            <argument type="service" id="templating" />
            <argument key="addId">%auth.facebook.app_id%</argument>
            <argument key="cookie">%auth.facebook.cookie%</argument>
        </service>
    </services>
</container>
